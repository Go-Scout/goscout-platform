{
  "name": "go-scout-platform",
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "apps/**",
      "packages/*"
    ],
    "nohoist": [
      "**/firebase-admin",
      "**/firebase-admin/**",
      "**/firebase-functions",
      "**/firebase-functions/**"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "cleanup": "lerna run cleanup",
    "coverage": "",
    "deploy": "lerna run deploy",
    "lint": "run-p -c 'lint:*'",
    "lint:json": "jsonlint",
    "lint:eslint": "eslint '{packages,apps}/**/*.{js,ts,tsx}' -c ./config/lint/.eslintrc.js --fix",
    "local:build": "lerna run local:build",
    "release": "",
    "serve": "lerna run serve",
    "stage": "lerna run stage",
    "strap": "lerna bootstrap",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/runtime-corejs3": "^7.6.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@iteratec/semantic-release-bitbucket": "^1.1.1",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@types/aws-serverless-express": "^3.3.1",
    "@types/body-parser": "^1.17.1",
    "@types/cheerio": "^0.22.15",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.12.5",
    "@types/nodemailer": "^6.4.0",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "axios": "^0.19.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.0.6",
    "babel-node-ts": "^1.0.3",
    "babel-plugin-import": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.3",
    "commitizen": "^4.0.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "express": "^4.17.1",
    "express-asyncify": "^1.0.0",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.3.0",
    "firebase-functions-test": "^0.1.7",
    "husky": "^3.0.2",
    "jest": "^24.9.0",
    "jsonlint": "^1.6.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "puppeteer": "^2.0.0",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.json": [
      "jsonlint --formatter=verbose",
      "git add"
    ],
    "**/*.{mjs, js, ts, tsx}": [
      "eslint -c ./config/lint/.eslintrc.js --fix --quiet",
      "git add"
    ],
    "**/*.{mjs, js, ts, tsx, yml, md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.test.{js, ts, tsx}": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.{ts|tsx|js}",
      "**/*.{test|spec}.{ts|tsx|js}"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "./config/test/jest.tsconfig.json"
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/server /**/*.ts",
      "!<rootDir> /**/*{stub,mocks,index,test,main}.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.{jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga}$": "<rootDir>/__mocks__/mocks.js",
      "\\.{css|less}$": "<rootDir>/__mocks__/mocks.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "eslintIgnore": [
    "lib/",
    ".firebase/",
    "*.d.ts",
    "node_modules/"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branch": "master",
    "message": "chore(release): v$ {nextRelease.version}: \n\n$ {nextRelease.notes}\n\n[***NO_CI***]",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "verifyConfig": [
      "@iteratec/semantic-release-bitbucket"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "docs/CHANGELOG.md"
      },
      "@semantic-release/git"
    ],
    "publish": [
      {
        "path": "@iteratec/semantic-release-bitbucket",
        "repositoryName": "temp-lerna-node"
      }
    ]
  },
  "private": true,
  "author": "Ruby Jasmin <rj@rubyjasmin.com> (https://rubyjasmin.com/)",
  "repository": {
    "type": "git",
    "url": "test"
  }
}
