{
  "hosting": {
    "cleanUrls": true,
    "public": "./apps/www-html/public",
    "ignore": ["**/.*", "**/node_modules/**"],
    "rewrites": [{ "source": "/api/**", "function": "api" }],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/404.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "./apps/core-api",
    "ignore": ["**/.gitignore", "src/", "tsconfig.json"]
  }
}
